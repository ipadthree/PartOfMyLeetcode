/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
 
 // My version 1.0
 
 
class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(!head) return NULL;
        ListNode *itloop = head;
        ListNode *sentinel = NULL;
        while(itloop != NULL){
            ListNode *newnode = new ListNode(itloop->val);
            newnode->next = sentinel;
            sentinel = newnode;
            itloop = itloop->next;
        }
        return sentinel;
    }
};


//With reference My version 2.0

class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        if(!head) return NULL;
        ListNode *next = NULL;
        ListNode *sentinel = NULL;
        ListNode *opt = head;
        while(opt){
            next = opt->next;
            opt->next = sentinel;
            sentinel = opt;
            opt = next;
        }
        return sentinel;
    }
};
